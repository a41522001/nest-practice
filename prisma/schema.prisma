generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  income
  expense
}

model User {
  id        String   @id @default(uuid()) @db.Char(36)
  sub       String   @unique(map: "sub") @default(uuid()) @db.Char(36)
  email     String   @unique(map: "email_UNIQUE") @db.VarChar(50)
  password  String
  name      String   @db.VarChar(20)
  createdAt DateTime @default(now())

  transactions Transaction[]
  categories   Category[]
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique @db.VarChar(10)
  deletedAt DateTime?
  userId    String? // 可選：null = 系統預設，有值 = 用戶自訂

  user         User?         @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@unique([name, userId]) // 同一用戶不能有重複類別名
}

model Transaction {
  id        String          @id @default(uuid())
  amount    Decimal
  note      String?
  type      TransactionType // 'income' 或 'expense'
  createdAt DateTime        @default(now())

  // 關聯到 User
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // 關聯到 Category
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
}
